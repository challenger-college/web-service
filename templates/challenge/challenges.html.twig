{% extends 'base.html.twig' %}

{% block title %}Challenges{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card m-3">
                <div class="card-header">
                    <h1 class="card-title">Challenges</h1>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <div class="list-group" id="list-tab" role="tablist">
                                {% for challenge in challenges %}
                                    <a class="list-group-item list-group-item-action {% if loop.index == 1%}active{% endif %}" id="list-{{ challenge.id }}-list" data-toggle="list" href="#list-{{ challenge.id }}" role="tab" aria-controls="{{ challenge.id }}">{{ challenge.title }}</a>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="col-8">
                            <div class="tab-content" id="nav-tabContent">
                                {% for challenge in challenges %}
                                    <div class="tab-pane fade {% if loop.index == 1%}show active{% endif %}" id="list-{{ challenge.id }}" role="tabpanel" aria-labelledby="list-{{ challenge.id }}-list">
                                        {{ challenge.description }}
                                        <a href="{{ path('exercice', {'challenge_id': challenge.id}) }}" class="btn btn-success float-right m-3">
                                            Faire l'Ã©xercice !
                                        </a>
                                        {% if challenge.author == app.user %}
                                            <a href="{{ path('challenge', {'challenge_id': challenge.id}) }}" class="btn btn-primary float-right m-3">
                                                Modifier le challenge
                                            </a>
                                        {% endif %}
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}